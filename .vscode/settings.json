{
    "python.defaultInterpreterPath": "frappe-bench/env/bin/python",
    "debug.node.autoAttach": "disabled",
    "sqltools.connections": [
        {
            "mysqlOptions": {
                "authProtocol": "default"
            },
            "previewLimit": 50,
            "server": "mariadb",
            "port": 3306,
            "driver": "MariaDB",
            "name": "MariaDB",
            "username": "root",
            "password": "123"
        }
    ],

    "python.analysis.include": ["src", "app"],          // adjust to your code dirs
    "python.analysis.exclude": [
        "**/.venv/**",
        "**/.git/**",
        "**/build/**",
        "**/dist/**",
        "**/.mypy_cache/**",
        "**/.pytest_cache/**",
        "**/data/**",
        "**/node_modules/**"
    ],
     // Turn off expensive features
    "python.analysis.indexing": false,
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": false,

    // Also reduce file watching overhead
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/node_modules/**": true,
        "**/build/**": true,
        "**/dist/**": true
  }




}